<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AcctiveAccountServlet</servlet-name>
        <servlet-class>Controller.AcctiveAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignupServlet</servlet-name>
        <servlet-class>Controller.SignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <servlet-class>Controller.ForgotPasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>Controller.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>movieDetail</servlet-name>
        <servlet-class>Controller.movieDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>Controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddMovieServlet</servlet-name>
        <servlet-class>Controller.AddMovieServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateMovieServlet</servlet-name>
        <servlet-class>Controller.UpdateMovieServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CMT</servlet-name>
        <servlet-class>Controller.CMT</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CMTT</servlet-name>
        <servlet-class>Controller.CMTT</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CM</servlet-name>
        <servlet-class>Controller.CM</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AcctiveAccountServlet</servlet-name>
        <url-pattern>/view/acctive</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignupServlet</servlet-name>
        <url-pattern>/view/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgotPasswordServlet</servlet-name>
        <url-pattern>/view/forgotPassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/view/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/view/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>movieDetail</servlet-name>
        <url-pattern>/view/movieDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/view/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddMovieServlet</servlet-name>
        <url-pattern>/view/addMovie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateMovieServlet</servlet-name>
        <url-pattern>/view/updateMovie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CMT</servlet-name>
        <url-pattern>/CMT</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CMTT</servlet-name>
        <url-pattern>/CMTT</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CM</servlet-name>
        <url-pattern>/CM</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
